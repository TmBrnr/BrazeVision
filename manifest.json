{
  "manifest_version": 3,
  "name": "Braze Liquid Highlighter",
  "version": "o.0.1",
  "description": "Transforms liquid templating syntax into human-readable descriptions with clean visual hierarchy",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Liquid Syntax Highlighter"
  },
  "web_accessible_resources": [
    {
      "resources": ["liquid-config.json"],
      "matches": ["<all_urls>"]
    }
  ]
} 